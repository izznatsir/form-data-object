{
	"compilerOptions": {
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"verbatimModuleSyntax": true
	},
	"include": ["**/*.ts"]
}
